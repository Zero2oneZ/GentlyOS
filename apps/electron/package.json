{
  "name": "gentlyos-electron",
  "version": "0.1.0",
  "description": "GentlyOS Desktop App (Electron)",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "author": "GentlyOS",
  "license": "SEE LICENSE IN ../../LICENSE.md",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "dev.gentlyos.desktop",
    "productName": "GentlyOS",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Development"
    },
    "win": {
      "target": "nsis"
    }
  }
}
